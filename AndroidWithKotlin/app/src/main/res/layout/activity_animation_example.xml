<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AnimationExample">

    <TextView
        android:id="@+id/animation_example"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="228dp"
        android:text="Animation Example"
        android:textColor="@color/purple_700"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/fade_in"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/zoom_out"
        android:layout_width="168dp"
        android:layout_height="47dp"
        android:layout_marginEnd="28dp"
        android:text="Zoom Out"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="530dp" />

    <Button
        android:id="@+id/rotate"
        android:layout_width="159dp"
        android:layout_height="47dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="36dp"
        android:text="Rotate"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/bounce_btn"
        android:layout_width="166dp"
        android:layout_height="44dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:text="Bounce"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/rotate"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/slide_up"
        app:layout_constraintVertical_bias="0.076"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/fade_in"
        android:layout_width="165dp"
        android:layout_height="49dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="12dp"
        android:text="Fade In"
        app:layout_constraintBottom_toTopOf="@+id/zoom_in"
        app:layout_constraintEnd_toStartOf="@+id/fade_out"
        app:layout_constraintHorizontal_bias="0.111"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/slide_down"
        android:layout_width="164dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:text="Slide Down"
        app:layout_constraintBottom_toTopOf="@+id/bounce_btn"
        app:layout_constraintEnd_toStartOf="@+id/slide_up"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/slide_up"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/slide_up"
        android:layout_width="170dp"
        android:layout_height="44dp"
        android:layout_marginEnd="28dp"
        android:text="Slide Up"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="592dp" />

    <Button
        android:id="@+id/zoom_in"
        android:layout_width="168dp"
        android:layout_height="49dp"
        android:layout_marginStart="20dp"
        android:text="Zoom In"
        app:layout_constraintBottom_toTopOf="@+id/slide_down"
        app:layout_constraintEnd_toStartOf="@+id/zoom_out"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/zoom_out"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/fade_out"
        android:layout_width="170dp"
        android:layout_height="50dp"
        android:layout_marginEnd="24dp"
        android:text="Fade Out"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/fade_in"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>